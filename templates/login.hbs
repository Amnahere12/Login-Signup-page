        /* Styling for the form container */
.form-container {
  max-width: 400px;
  margin: 0 auto;
  padding: 20px;
  background-color: #f2f2f2;
  border-radius: 5px;
}

/* Styling for the form title */
.form-title {
  text-align: center;
  margin-bottom: 20px;
}

/* Styling for form inputs */
.form-input {
  width: 100%;
  padding: 8px;
  margin-bottom: 15px;
  border: 1px solid #ccc;
  border-radius: 4px;
}

/* Styling for submit button */
.form-submit {
  background-color: #4caf50;
  color: white;
  padding: 10px 16px;
  border: none;
  border-radius: 4px;
  cursor: pointer;
}

/* Styling for submit button on hover */
.form-submit:hover {
  background-color: #45a049;
}

/* Styling for link */
.form-link {
  display: block;
  text-align: center;
  margin-top: 10px;
}

