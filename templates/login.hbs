 <style>
  /* Background and container styles */
  body {
    background-color: #f9f9f9;
  }

  .form-container {
    max-width: 400px;
    margin: 0 auto;
    padding: 20px;
    background-color: #fff;
    border-radius: 10px;
    box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
  }

  /* Title style */
  .form-title {
    font-size: 30px;
    text-align: center;
    color: #333;
    margin-bottom: 20px;
  }

  /* Input field styles */
  .form-input {
    width: 100%;
    padding: 10px;
    margin-bottom: 15px;
    border: 2px solid #ddd;
    border-radius: 5px;
    outline: none;
    transition: border-color 0.3s ease;
  }

  .form-input:focus {
    border-color: #ff6f00;
  }

  /* Submit button style */
  .form-submit {
    width: 100%;
    padding: 10px;
    background-color: #ff6f00;
    color: #fff;
    border: none;
    border-radius: 5px;
    cursor: pointer;
    transition: background-color 0.3s ease;
  }

  .form-submit:hover {
    background-color: #ff914d;
  }

  /* Link style */
  .form-link {
    display: block;
    text-align: center;
    margin-top: 10px;
    color: #999;
    text-decoration: none;
  }

  .form-link:hover {
    color: #ff6f00;
  }
</style>


